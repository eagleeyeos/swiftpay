# SwiftPayme Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Environment
NODE_ENV=development
LOG_LEVEL=info

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=swiftpayme
POSTGRES_USER=swiftpayme
POSTGRES_PASSWORD=swiftpayme123
POSTGRES_SSL=false
POSTGRES_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=swiftpayme

# Message Queue Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=swiftpayme

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-super-secret-refresh-key-change-in-production
REFRESH_TOKEN_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_TIMEOUT=900000
MAX_FAILED_ATTEMPTS=5
LOCKOUT_DURATION=900000

# API Configuration
API_GATEWAY_PORT=8000
USER_SERVICE_PORT=8001
TRANSACTION_SERVICE_PORT=8002
BILLING_SERVICE_PORT=8003
LEDGER_SERVICE_PORT=8004
TOKENIZATION_SERVICE_PORT=8005
CRYPTO_SERVICE_PORT=8006
CURRENCY_CONVERSION_PORT=8007
API_SERVICE_PORT=8008
ADMIN_SERVICE_PORT=8009

# External API Keys
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
BLOCKCHAIN_API_KEY=your-blockchain-api-key

# Bitcoin Configuration
BITCOIN_RPC_HOST=localhost
BITCOIN_RPC_PORT=8332
BITCOIN_RPC_USER=swiftpayme
BITCOIN_RPC_PASSWORD=swiftpayme123
BITCOIN_NETWORK=regtest

# Lightning Network Configuration
LND_HOST=localhost
LND_PORT=10009
LND_MACAROON_PATH=/path/to/admin.macaroon
LND_TLS_CERT_PATH=/path/to/tls.cert

# Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key
API_RATE_LIMIT=1000
API_RATE_WINDOW=900000

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
ELASTICSEARCH_URL=http://localhost:9200
KIBANA_PORT=5601

# Logging Configuration
LOG_CONSOLE=true
LOG_FILE=false
LOG_FILE_PATH=logs/swiftpayme.log
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=5
LOG_ELASTICSEARCH=false
LOG_ELASTICSEARCH_INDEX=swiftpayme-logs

# Frontend Configuration
WEB_UI_PORT=3001
ADMIN_UI_PORT=3002
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000
REACT_APP_ADMIN_API_URL=http://localhost:8009

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@swiftpayme.com

# SMS Configuration (for 2FA)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# File Storage Configuration
STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=swiftpayme-documents

# Compliance Configuration
KYC_PROVIDER=jumio
KYC_API_KEY=your-kyc-api-key
KYC_API_SECRET=your-kyc-api-secret

# Fraud Detection Configuration
FRAUD_DETECTION_ENABLED=true
FRAUD_SCORE_THRESHOLD=75
FRAUD_BLOCK_THRESHOLD=90

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

