{
  "name": "@swiftpayme/api-gateway",
  "version": "1.0.0",
  "description": "SwiftPayme API Gateway - Entry point for all client requests with routing, authentication, and security",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "api-gateway",
    "microservices",
    "authentication",
    "routing",
    "fintech"
  ],
  "author": "SwiftPayme Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "express-slow-down": "^1.6.0",
    "jsonwebtoken": "^9.0.1",
    "bcrypt": "^5.1.0",
    "redis": "^4.6.7",
    "pg": "^8.11.1",
    "mongodb": "^5.6.0",
    "kafkajs": "^2.2.4",
    "winston": "^3.9.0",
    "dotenv": "^16.3.1",
    "joi": "^17.9.2",
    "http-proxy-middleware": "^2.0.6",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-validator": "^7.0.1",
    "uuid": "^9.0.0",
    "axios": "^1.4.0",
    "swagger-ui-express": "^4.6.3",
    "yamljs": "^0.3.0"
